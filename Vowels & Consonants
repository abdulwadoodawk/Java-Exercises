package BreakOutActivity;
import java.util.Scanner;
public class VowelsConsonants {

	public static void main(String[] args) {
		// TO count the no. of vowels, consonants and white spaces
		Scanner obj = new Scanner(System.in);
		System.out.println("Enter the string you want to check for Vowels and consonants : ");
		String sentenceToCheck = obj.nextLine();
		System.out.println("Entered sentence is : " + sentenceToCheck);
		int countOfVowel = 0 , countOfConsonants = 0;
for (int ctr=0; ctr<sentenceToCheck.length() ; ctr++) {
	char ch = sentenceToCheck.charAt(ctr);
	if (ch == 'a' || ch=='e'||ch=='i'||ch=='o'||ch=='u'||ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U' ) {
		System.out.println(ch + " is a vowel");
		countOfVowel++;
		
	}
	else if (ch == ' ') {
		System.out.println("Its a whitespace");
		
	}
	else {
		System.out.println(ch + " is a consonant");
		countOfConsonants++;
	}
	
	
}
System.out.println("Count of Vowels is : " + countOfVowel);
System.out.println("Count of Consonants is : " + countOfConsonants);
	}

}
